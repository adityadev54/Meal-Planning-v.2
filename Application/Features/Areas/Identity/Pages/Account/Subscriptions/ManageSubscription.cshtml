@page
@model Meal_Planning.Areas.Identity.Pages.Account.Subscriptions.ManageSubscriptionModel
@{
    ViewData["Title"] = "Manage Your Subscription";
}

<div class="bg-white p-6 rounded-lg shadow-md max-w-3xl mx-auto mt-6">
    <h1 class="text-2xl font-bold mb-6">@ViewData["Title"]</h1>
    
    @if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">@ViewData["SuccessMessage"]</span>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">@ViewData["ErrorMessage"]</span>
        </div>
    }
    
    <div class="mb-8">
        <h2 class="text-lg font-semibold mb-3">Current Subscription Status</h2>
        
        <div class="bg-gray-50 p-4 rounded border mb-4">
            @if (Model.TrialActive)
            {
                <p class="mb-2"><span class="font-medium">Status:</span> <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">Free Trial</span></p>
                <p class="mb-2"><span class="font-medium">Days Remaining:</span> @Model.TrialDaysLeft</p>
                <p>Your free trial will end on @Model.TrialEndDate.ToShortDateString().</p>
                
                <div class="mt-4">
                    <a href="/Identity/Areas/Payments/MealPlanPayments" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                        Subscribe Now
                    </a>
                </div>
            }
            else if (Model.HasActiveSubscription)
            {
                <p class="mb-2"><span class="font-medium">Status:</span> <span class="bg-green-100 text-green-800 px-2 py-1 rounded">Active</span></p>
                <p class="mb-2"><span class="font-medium">Plan:</span> @Model.SubscriptionPlanName</p>
                <p class="mb-2"><span class="font-medium">Price:</span> $@Model.SubscriptionAmount.ToString("F2")/month</p>
                <p class="mb-2"><span class="font-medium">Next Billing Date:</span> @Model.NextBillingDate?.ToShortDateString()</p>
                
                <form method="post" class="mt-4">
                    <button type="submit" asp-page-handler="CancelSubscription" 
                            onclick="return confirm('Are you sure you want to cancel your subscription? You will lose access to premium features at the end of your billing period.');"
                            class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">
                        Cancel Subscription
                    </button>
                </form>
            }
            else
            {
                <p class="mb-2"><span class="font-medium">Status:</span> <span class="bg-red-100 text-red-800 px-2 py-1 rounded">No Active Subscription</span></p>
                <p>You don't have an active subscription. Subscribe to access premium features.</p>
                
                <div class="mt-4">
                    <a href="/Identity/Areas/Payments/MealPlanPayments" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                        Subscribe Now
                    </a>
                </div>
            }
        </div>
    </div>
    
    @if (Model.PastSubscriptions.Any())
    {
        <div>
            <h2 class="text-lg font-semibold mb-3">Subscription History</h2>
            
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="py-2 px-4 border-b text-left">Plan</th>
                            <th class="py-2 px-4 border-b text-left">Amount</th>
                            <th class="py-2 px-4 border-b text-left">Start Date</th>
                            <th class="py-2 px-4 border-b text-left">End Date</th>
                            <th class="py-2 px-4 border-b text-left">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sub in Model.PastSubscriptions)
                        {
                            <tr>
                                <td class="py-2 px-4 border-b">@sub.PlanName</td>
                                <td class="py-2 px-4 border-b">$@sub.Amount.ToString("F2")</td>
                                <td class="py-2 px-4 border-b">@sub.CreatedAt.ToShortDateString()</td>
                                <td class="py-2 px-4 border-b">@(sub.ExpiresAt?.ToShortDateString() ?? "N/A")</td>
                                <td class="py-2 px-4 border-b">@sub.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
