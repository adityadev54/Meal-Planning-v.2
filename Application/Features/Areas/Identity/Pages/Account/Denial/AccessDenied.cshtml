@page
@model Meal_Planning.Application.Features.Areas.Identity.Pages.Account.Denial.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
}

<div class="min-h-screen w-full bg-gradient-to-br from-orange-50 via-orange-100/20 to-white flex flex-col">
    <!-- Header Row -->
    <div class="w-full flex justify-between items-start px-8 pt-8">
        <!-- Logo (top-left) -->
        <div class="flex items-center">
            <a href="/" class="text-lg font-bold text-gray-800">
                GetMoving <span class="text-orange-500">Menu</span>
            </a>
        </div>
        
        <!-- User Info (top-right) -->
        @if (isAuthenticated)
        {
            <div class="text-right">
                <div class="text-sm text-gray-800 font-semibold">
                    Welcome, @Model.FirstName
                </div>
                <div class="text-xs text-gray-600">
                    @(Model.Roles != null && Model.Roles.Count > 0 ? string.Join(", ", Model.Roles) : "Member")
                </div>
            </div>
        }
    </div>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col items-center justify-center px-4 max-w-3xl mx-auto">
        <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md text-center">
            <div class="mb-6">
                <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-10 h-10 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Access Denied</h1>
                <div class="w-16 h-1 bg-orange-500 mx-auto mb-4"></div>
            </div>
            
            <p class="text-gray-700 text-lg mb-6">
                <span class="font-medium">You don't have permission to view this page.</span>
                <br />
                If you believe this is an error, please contact our support team.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
                <a href="mailto:support@getmovingmenu.com"
                   class="bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-6 rounded-xl transition text-base shadow-md">
                    Contact Support
                </a>
                <a href="/"
                   class="bg-white border-2 border-orange-200 hover:border-orange-300 text-orange-600 font-semibold py-3 px-6 rounded-xl transition text-base shadow-sm">
                    Return Home
                </a>
            </div>
            
            <div class="text-sm text-gray-500 mt-6 border-t border-gray-100 pt-4">
                Need help? Our support team is available Monday-Friday, 9am-5pm EST.
            </div>
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="mt-auto py-4 text-center text-sm text-gray-600">
        <p>&copy; @DateTime.Now.Year GetMoving Menu. All rights reserved.</p>
    </footer>
</div>