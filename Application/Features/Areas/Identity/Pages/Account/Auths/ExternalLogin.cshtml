@page
@model Meal_Planning.Application.Features.Areas.Identity.Pages.Account.Auths.ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex flex-col justify-center items-center py-8 px-4 bg-gradient-to-b from-white to-brand-50">
    <div class="w-full max-w-md mx-auto">
        <div class="flex flex-col items-center mb-8">
            <img src="~/assets/getmoving1000.png" alt="GetMoving Logo" class="h-16 w-auto mb-4" />
            <h1 class="text-3xl font-bold text-brand-700 mb-2">@ViewData["Title"]</h1>
            <p class="text-gray-600 text-sm mb-6 text-center">You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.</p>
            <p class="text-gray-600 text-sm mb-6 text-center">Please enter an email address for this site below and click the Register button to finish logging in.</p>
        </div>

        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6 bg-white p-8 rounded-xl shadow-lg border border-brand-100">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-lg" role="alert"></div>
            <div class="space-y-2">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700"></label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i data-lucide="mail" class="h-5 w-5 text-gray-400"></i>
                    </div>
                    <input asp-for="Input.Email" class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 bg-white sm:text-sm" />
                </div>
                <span asp-validation-for="Input.Email" class="text-sm text-red-600 block"></span>
            </div>

            <button type="submit" class="w-full flex justify-center items-center px-4 py-3 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-brand-600 to-orange-500 hover:from-brand-700 hover:to-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition-all transform hover:scale-[1.02]">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Initialize Lucide Icons
        lucide.createIcons();
    </script>
}
