<script>
    // Enhanced smooth scrolling and interactive navigation
    document.addEventListener('DOMContentLoaded', function() {
        // Smooth scroll for all anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    // Highlight the target briefly
                    if (target.querySelector('.bg-white')) {
                        target.querySelector('.bg-white').classList.add('ring', 'ring-[#c9a227]', 'ring-opacity-75');
                        setTimeout(() => {
                            target.querySelector('.bg-white').classList.remove('ring', 'ring-[#c9a227]', 'ring-opacity-75');
                        }, 2000);
                    }
                    
                    // Scroll to target with improved offset calculation for different screen sizes
                    const mobileOffset = window.innerWidth < 768 ? 80 : 100;
                    window.scrollTo({
                        top: target.offsetTop - mobileOffset,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Update active section in sidebar based on scroll position
        const sections = document.querySelectorAll('section[id]');
        const desktopNavLinks = document.querySelectorAll('.fixed a[href^="#"]');
        
        function updateActiveSection() {
            const scrollPosition = window.scrollY + 150;
            let currentActive = null;
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.offsetHeight;
                
                if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
                    const currentId = section.getAttribute('id');
                    currentActive = currentId;
                    
                    // Update desktop navigation
                    desktopNavLinks.forEach(link => {
                        link.classList.remove('bg-[#f8f3e3]', 'text-[#b48e22]');
                        if (link.getAttribute('href') === `#${currentId}`) {
                            link.classList.add('bg-[#f8f3e3]', 'text-[#b48e22]');
                        }
                    });
                }
            });
            
            // Update page title with current section
            if (currentActive) {
                const sectionTitle = document.querySelector(`#${currentActive} h2`).textContent;
                document.title = `${sectionTitle} - GetMoving Meals Documentation`;
            }
        }
        
        // Watch for video interactions to track engagement
        document.querySelectorAll('video').forEach(video => {
            video.addEventListener('play', function() {
                // Could be used for analytics in the future
                console.log(`Video started: ${this.closest('section').querySelector('h2').textContent}`);
            });
            
            video.addEventListener('pause', function() {
                // Could be used for analytics in the future
                console.log(`Video paused: ${this.closest('section').querySelector('h2').textContent}`);
            });
        });
        
        // Track scrolling to update active section
        window.addEventListener('scroll', updateActiveSection);
        
        // Handle window resize
        window.addEventListener('resize', function() {
            // Re-calculate any position-dependent elements
            updateActiveSection();
        });
        
        // Initialize active section
        updateActiveSection();
    });
</script>
