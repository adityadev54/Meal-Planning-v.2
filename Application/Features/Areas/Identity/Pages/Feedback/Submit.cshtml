@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
            
            // Star rating logic with enhanced visual effects
            const stars = document.querySelectorAll('#rating-stars .star');
            const ratingInput = document.querySelector('input[name="Feedback.Rating"]');                stars.forEach(star => {
                star.addEventListener('mouseenter', function () {
                    const value = parseInt(this.dataset.value);
                    stars.forEach((s, i) => {
                        // Apply gold color to stars up to the current one
                        s.classList.toggle('text-[#c9a227]', i < value);
                        s.classList.toggle('text-gray-300', i >= value);
                        
                        // Add scale effect to the stars
                        if (i < value) {
                            s.classList.add('transform', 'scale-110');
                        } else {
                            s.classList.remove('transform', 'scale-110');
                        }
                    });
                });
                
                star.addEventListener('mouseleave', function () {
                    stars.forEach((s, i) => {
                        s.classList.toggle('text-[#c9a227]', ratingInput.value && i < ratingInput.value);
                        s.classList.toggle('text-gray-300', !ratingInput.value || i >= ratingInput.value);
                        
                        // Remove scale effect when not hovering
                        if (!ratingInput.value || parseInt(ratingInput.value) <= i) {
                            s.classList.remove('transform', 'scale-110');
                        }
                    });
                });
                
                star.addEventListener('click', function () {
                    // Add animation effect when selecting a star
                    this.classList.add('animate-ping');
                    setTimeout(() => this.classList.remove('animate-ping'), 300);
                    
                    ratingInput.value = this.dataset.value;
                    stars.forEach((s, i) => {
                        s.classList.toggle('text-[#c9a227]', i < ratingInput.value);
                        s.classList.toggle('text-gray-300', i >= ratingInput.value);
                    });
                });
            });
            
            // Initialize star rating if value exists
            if (ratingInput.value) {
                stars.forEach((s, i) => {
                    s.classList.toggle('text-[#c9a227]', i < ratingInput.value);
                    s.classList.toggle('text-gray-300', i >= ratingInput.value);
                });
            }
            
            // Enhanced file upload experience
            const fileInput = document.getElementById('attachment');
            const fileLabel = document.getElementById('file-upload-label');
            const fileUploadArea = fileInput.closest('div.border-dashed');
            
            // Update label and styling on file selection
            fileInput.addEventListener('change', () => {
                if (fileInput.files.length > 0) {
                    const fileName = fileInput.files[0].name;
                    fileLabel.textContent = fileName;
                    fileUploadArea.classList.add('bg-[#f8f3e3]/70', 'border-[#c9a227]');
                    fileUploadArea.classList.remove('bg-[#f8f3e3]/20', 'border-[#e5c867]');
                    
                    // Show file icon based on file type
                    const fileIcon = fileUploadArea.querySelector('[data-lucide="upload"]');
                    if (fileIcon) {
                        if (fileName.match(/\.(jpg|jpeg|png|gif)$/i)) {
                            fileIcon.setAttribute('data-lucide', 'image');
                        } else if (fileName.match(/\.(pdf)$/i)) {
                            fileIcon.setAttribute('data-lucide', 'file-text');
                        } else if (fileName.match(/\.(doc|docx)$/i)) {
                            fileIcon.setAttribute('data-lucide', 'file-text');
                        }
                        if (typeof lucide !== 'undefined') {
                            lucide.createIcons();
                        }
                    }
                } else {
                    resetFileUpload();
                }
            });
            
            // Reset file upload appearance
            function resetFileUpload() {
                fileLabel.textContent = 'Upload Attachment (optional)';
                fileUploadArea.classList.remove('bg-[#f8f3e3]/70', 'border-[#c9a227]');
                fileUploadArea.classList.add('bg-[#f8f3e3]/20', 'border-[#e5c867]');
                
                const fileIcon = fileUploadArea.querySelector('[data-lucide]');
                if (fileIcon) {
                    fileIcon.setAttribute('data-lucide', 'upload');
                    if (typeof lucide !== 'undefined') {
                        lucide.createIcons();
                    }
                }
            }
            
            // Drag and drop functionality
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                fileUploadArea.addEventListener(eventName, preventDefaults, false);
            });
            
            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }
            
            ['dragenter', 'dragover'].forEach(eventName => {
                fileUploadArea.addEventListener(eventName, highlight, false);
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                fileUploadArea.addEventListener(eventName, unhighlight, false);
            });
            
            function highlight() {
                fileUploadArea.classList.add('bg-[#f8f3e3]/70', 'scale-105');
            }
            
            function unhighlight() {
                fileUploadArea.classList.remove('bg-[#f8f3e3]/70', 'scale-105');
            }
            
            fileUploadArea.addEventListener('drop', handleDrop, false);
            
            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                fileInput.files = files;
                
                // Trigger change event
                const event = new Event('change', { bubbles: true });
                fileInput.dispatchEvent(event);
            }
            
            // Add animation styles
            const style = document.createElement('style');
            style.innerHTML = 
                "@@keyframes ping {" +
                "    75%, 100% {" +
                "        transform: scale(1.2);" +
                "        opacity: 0;" +
                "    }" +
                "}" +
                ".animate-ping {" +
                "    animation: ping 0.3s cubic-bezier(0, 0, 0.2, 1);" +
                "}" +
                "@@keyframes fade-in {" +
                "    0% { opacity: 0; }" +
                "    100% { opacity: 1; }" +
                "}" +
                ".animate-fade-in {" +
                "    animation: fade-in 0.5s ease-out forwards;" +
                "}";
            document.head.appendChild(style);
        });
    </script>
}