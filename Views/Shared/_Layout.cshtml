    <style>
        /* Consistent blurred navbar - same effect always */
        .liquid-glass-navbar {
            background: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            /* box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); */
        }

        /* Remove the scrolled state differentiation */
        .liquid-glass-navbar.scrolled {
            /* Same as default state */
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
        }

        /* Nav link styling */
        .liquid-glass-navbar .nav-link {
            color: rgba(0, 0, 0, 0.8);
            transition: all 0.3s ease;
        }

        .liquid-glass-navbar .nav-link:hover {
            color: #c9a227; /* Gold hover color */
            transform: translateY(-1px);
        }

        /* Mobile menu styling */
        #mobile-menu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out, opacity 0.2s ease;
            opacity: 0;
            background: rgba(255, 255, 255, 0.95); /* Light glass for mobile */
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            /* border-bottom: 1px solid rgba(0, 0, 0, 0.1); */
        }

        #mobile-menu.show {
            max-height: 500px;
            opacity: 1;
        }

        #mobile-menu .nav-link {
            color: rgba(0, 0, 0, 0.8);
        }

        #mobile-menu .nav-link:hover {
            color: #c9a227;
            background: rgba(0, 0, 0, 0.05);
        }

        /* Menu toggle button */
        #menu-toggle {
            color: rgba(0, 0, 0, 0.8);
        }

        /* Focus states */
        .nav-link:focus-visible {
            outline: 2px solid #c9a227;
            outline-offset: 2px;
        }

        /* Touch targets */
        .touch-target {
            min-width: 44px;
            min-height: 44px;
        }

        /* Logo visibility */
        .navbar-logo {
            filter: none;
        }

        /* Ensure icons are visible */
        .liquid-glass-navbar [data-lucide] {
            color: inherit;
            stroke: currentColor;
        }
    </style>
</head>

