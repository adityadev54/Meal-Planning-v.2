@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto py-12 px-6 max-w-5xl">
    <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-100">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-brand-700 mb-4">Contact Us</h1>
            <p class="text-gray-600 text-lg max-w-2xl mx-auto">
                Have questions or feedback? We'd love to hear from you. Use the form below or reach out through our support channels.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
            <!-- Contact Form -->
            <div class="bg-gradient-to-br from-white to-brand-50 rounded-lg p-8 shadow-sm border border-brand-100">
                <h2 class="text-xl font-semibold text-brand-700 mb-6">Send us a message</h2>
                
                <form id="contactForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Name -->
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
                            <input type="text" id="name" name="name" 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                                   placeholder="John Doe">
                        </div>
                        
                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                            <input type="email" id="email" name="email" 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                                   placeholder="you@example.com">
                        </div>
                    </div>
                    
                    <!-- Subject -->
                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                        <input type="text" id="subject" name="subject" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                               placeholder="How can we help you?">
                    </div>
                    
                    <!-- Message -->
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                        <textarea id="message" name="message" rows="5" 
                                  class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                                  placeholder="Type your message here..."></textarea>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="flex justify-end">
                        <button type="button" id="submitContactForm" 
                                class="px-6 py-3 bg-gradient-to-r from-brand-600 to-orange-500 text-white font-medium rounded-lg shadow hover:from-brand-700 hover:to-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition-all transform hover:scale-[1.02]">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
            
            <!-- Contact Information -->
            <div class="bg-gray-50 rounded-lg p-8 border border-gray-100">
                <h2 class="text-xl font-semibold text-brand-700 mb-6">Our Contact Information</h2>
                
                <div class="space-y-6">
                    <!-- Email -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0 mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-700">Email Address</p>
                            <p class="mt-1 text-sm text-gray-600">support@getmovingmenu.com</p>
                        </div>
                    </div>
                    
                    <!-- Phone -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0 mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 8V5z" />
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-700">Phone Number</p>
                            <p class="mt-1 text-sm text-gray-600">(555) 123-4567</p>
                            <p class="mt-1 text-xs text-gray-500">Monday-Friday, 9am-5pm EST</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- FAQ Section -->
        <div class="mt-16">
            <h2 class="text-2xl font-bold text-brand-700 mb-8 text-center">Frequently Asked Questions</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- FAQ Item 1 -->
                <div class="bg-gradient-to-br from-white to-brand-50 rounded-lg p-6 border border-brand-100 shadow-sm">
                    <h3 class="text-lg font-semibold text-brand-700 mb-3">How do I subscribe to GetMoving Menu?</h3>
                    <p class="text-gray-600">
                        You can subscribe by creating an account and selecting a subscription plan from our pricing page. We offer monthly and annual subscription options to fit your needs.
                    </p>
                </div>
                
                <!-- FAQ Item 2 -->
                <div class="bg-gradient-to-br from-white to-brand-50 rounded-lg p-6 border border-brand-100 shadow-sm">
                    <h3 class="text-lg font-semibold text-brand-700 mb-3">Can I cancel my subscription at any time?</h3>
                    <p class="text-gray-600">
                        Yes, you can cancel your subscription at any time through your account settings. Your access will continue until the end of your current billing period.
                    </p>
                </div>
                
                <!-- FAQ Item 3 -->
                <div class="bg-gradient-to-br from-white to-brand-50 rounded-lg p-6 border border-brand-100 shadow-sm">
                    <h3 class="text-lg font-semibold text-brand-700 mb-3">How quickly will I receive a response to my inquiry?</h3>
                    <p class="text-gray-600">
                        We strive to respond to all inquiries within 24-48 business hours. For urgent matters, we recommend calling our customer support line.
                    </p>
                </div>
                
                <!-- FAQ Item 4 -->
                <div class="bg-gradient-to-br from-white to-brand-50 rounded-lg p-6 border border-brand-100 shadow-sm">
                    <h3 class="text-lg font-semibold text-brand-700 mb-3">Do you offer meal plans for special dietary needs?</h3>
                    <p class="text-gray-600">
                        Yes, our meal planning service accommodates various dietary preferences and restrictions including vegetarian, vegan, gluten-free, and many others.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add JavaScript for form functionality (demo only) -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Demo form submission - would be replaced with actual server submission in production
        const submitButton = document.getElementById('submitContactForm');
        if (submitButton) {
            submitButton.addEventListener('click', function() {
                // Check if form fields are filled
                const nameField = document.getElementById('name');
                const emailField = document.getElementById('email');
                const subjectField = document.getElementById('subject');
                const messageField = document.getElementById('message');
                
                if (!nameField.value || !emailField.value || !messageField.value) {
                    // Show error toast
                    showToast('Please fill all required fields', 'error');
                    return;
                }
                
                // Simulate successful submission
                submitButton.disabled = true;
                submitButton.innerHTML = 'Sending...';
                
                // Simulate API call
                setTimeout(() => {
                    // Reset form
                    document.getElementById('contactForm').reset();
                    submitButton.disabled = false;
                    submitButton.innerHTML = 'Send Message';
                    
                    // Show success message
                    showToast('Your message has been sent! We\'ll get back to you soon.', 'success');
                }, 1500);
            });
        }
        
        function showToast(message, type = 'success') {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `fixed bottom-4 right-4 flex items-center p-4 mb-4 rounded-lg shadow-lg ${type === 'success' ? 'bg-green-600' : 'bg-red-600'} text-white max-w-xs z-50 transition-all transform translate-y-full opacity-0`;
            
            // Toast icon
            const iconSvg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
            iconSvg.setAttribute('class', 'w-5 h-5 mr-2');
            iconSvg.setAttribute('fill', 'none');
            iconSvg.setAttribute('viewBox', '0 0 24 24');
            iconSvg.setAttribute('stroke', 'currentColor');
            
            const iconPath = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            iconPath.setAttribute('stroke-linecap', 'round');
            iconPath.setAttribute('stroke-linejoin', 'round');
            iconPath.setAttribute('stroke-width', '2');
            
            if (type === 'success') {
                iconPath.setAttribute('d', 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z');
            } else {
                iconPath.setAttribute('d', 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z');
            }
            
            iconSvg.appendChild(iconPath);
            
            // Toast message
            const messageSpan = document.createElement('span');
            messageSpan.textContent = message;
            
            // Append elements
            toast.appendChild(iconSvg);
            toast.appendChild(messageSpan);
            document.body.appendChild(toast);
            
            // Animate in
            setTimeout(() => {
                toast.classList.replace('translate-y-full', 'translate-y-0');
                toast.classList.replace('opacity-0', 'opacity-100');
            }, 10);
            
            // Remove after 5 seconds
            setTimeout(() => {
                toast.classList.replace('translate-y-0', 'translate-y-full');
                toast.classList.replace('opacity-100', 'opacity-0');
                
                setTimeout(() => {
                    document.body.removeChild(toast);
                }, 300);
            }, 5000);
        }
    });
</script>
