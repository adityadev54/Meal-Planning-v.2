@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white py-20 text-black relative w-full">
    <div class="mx-auto">
        <!-- Hero Section -->
        <section class="py-20 px-6 lg:px-20 flex flex-col-reverse lg:flex-row items-center gap-14 max-w-7xl mx-auto">
            <div class="lg:w-1/2">
                <div class="inline-flex items-center bg-orange-100 px-4 py-2 rounded-full mb-6">
                    <span class="text-orange-600 font-bold">✨ 7-Day Free Trial Available</span>
                </div>
                <h1 class="text-5xl lg:text-6xl font-bold text-[#1B1B1B] leading-tight mb-6">
                    Healthy Eating, <span class="text-orange-500">Made Simple</span> & Enjoyable
                </h1>
                <p class="text-xl text-[#37474F] mb-8 leading-relaxed">
                    Easy-to-follow meal plans designed for your needs. Large print, simple instructions, and delicious meals you'll love.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="#how-it-works"
                       class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-semibold py-4 px-10 rounded-xl text-lg shadow-md transition">
                        Try Free for 7 Days
                    </a>
                    <a href="#features"
                       class="inline-block bg-white border-2 border-orange-200 hover:border-orange-300 text-orange-600 font-semibold py-4 px-10 rounded-xl text-lg shadow-sm transition">
                        See How It Works
                    </a>
                </div>
            </div>
            <div class="lg:w-1/2 text-center group relative">
                <img src="~/assets/eating-in-group.jpg" alt="Healthy Food and Elderly"
                     class="rounded-2xl shadow-xl w-full max-w-md mx-auto transform transition duration-500 group-hover:scale-105 group-hover:shadow-2xl" />
                <!-- Floating Trust Badges -->
                <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 bg-white rounded-xl shadow-lg p-4 flex gap-6">
                    <div class="flex items-center gap-2">
                        <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        <span class="font-semibold text-gray-800">4.8/5 Rating</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                        </svg>
                        <span class="font-semibold text-gray-800">1000+ Users</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Special Features Section -->
        <section id="features" class="py-16 text-center max-w-5xl mx-auto px-6">
            <h2 class="text-4xl font-semibold text-gray-900 mb-10">What Makes GetMoving Menu Special?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="p-8 bg-white border border-orange-100 rounded-xl shadow-md hover:shadow-lg transition duration-300">
                    <div class="flex flex-col items-center">
                        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-4">
                            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">Personalized for You</h3>
                        <p class="text-gray-600 text-lg">Get meal plans based on your favorite foods and dietary needs.</p>
                    </div>
                </div>
                <div class="p-8 bg-white border border-orange-100 rounded-xl shadow-md hover:shadow-lg transition duration-300">
                    <div class="flex flex-col items-center">
                        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-4">
                            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">Easy to Follow</h3>
                        <p class="text-gray-600 text-lg">Simple steps, clear instructions, and a meal plan you'll love.</p>
                    </div>
                </div>
                <div class="p-8 bg-white border border-orange-100 rounded-xl shadow-md hover:shadow-lg transition duration-300">
                    <div class="flex flex-col items-center">
                        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-4">
                            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">Saves You Time</h3>
                        <p class="text-gray-600 text-lg">Spend less time planning and more time enjoying your meals.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Steps Section -->
        <section id="how-it-works" class="py-24 max-w-6xl mx-auto px-6">
            <h2 class="text-4xl font-semibold text-gray-900 mb-12 text-center">How It Works</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @{
                    string[] steps = { "Login/Register", "Open MealPlanner", "Pick Your Favorites", "Generate Your Plan", "Review & Adjust", "Download & Enjoy" };
                    string[] descriptions = { "Create an account or log in to get started.", "Open the meal planner to begin your journey.", "Tell us what you like & dislike.", "We'll create a perfect plan instantly.", "Make any changes you'd like.", "Download it or Email it!" };
                    string[] svgPaths = {
                        "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
                        "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
                        "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
                        "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
                        "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z",
                        "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                    };
                }

                @for (int i = 0; i < steps.Length; i++)
                {
                    <div class="flex flex-col items-center p-8 bg-white border border-orange-100 rounded-xl shadow-md hover:shadow-lg transition duration-300 transform hover:-translate-y-1">
                        <div class="w-16 h-16 rounded-full bg-orange-100 flex items-center justify-center mb-4">
                            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@svgPaths[i]"/>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2 text-center">@steps[i]</h3>
                        <p class="text-gray-600 text-center text-lg max-w-xs mx-auto">@descriptions[i]</p>
                    </div>
                }
            </div>
        </section>

        <!-- Call to Action Section -->
        <section id="trial" class="py-20 text-center bg-gradient-to-br from-orange-50 via-orange-100/50 to-orange-50">
            <div class="max-w-4xl mx-auto px-6">
                <span class="inline-block bg-orange-100 text-orange-700 font-semibold px-4 py-1 rounded-full text-sm mb-6">LIMITED TIME OFFER</span>
                <h2 class="text-4xl font-bold text-gray-900 mb-4">Try GetMoving Menu Free for 7 Days</h2>
                <p class="text-xl text-gray-600 mb-8">Experience better meal planning with no commitment. Cancel anytime during your trial.</p>
                
                <!-- Trial Benefits -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
                    <div class="bg-white p-6 rounded-xl shadow-sm">
                        <svg class="w-8 h-8 text-orange-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Full Access</h3>
                        <p class="text-gray-600">Try all features with no restrictions</p>
                    </div>
                    <div class="bg-white p-6 rounded-xl shadow-sm">
                        <svg class="w-8 h-8 text-orange-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Credit Card</h3>
                        <p class="text-gray-600">Start your trial without payment info</p>
                    </div>
                    <div class="bg-white p-6 rounded-xl shadow-sm">
                        <svg class="w-8 h-8 text-orange-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Instant Access</h3>
                        <p class="text-gray-600">Get your first meal plan today</p>
                    </div>
                </div>

                <a href="/MealPlan/MealPlanForm"
                   class="inline-flex items-center bg-orange-500 hover:bg-orange-600 text-white font-semibold py-4 px-10 rounded-xl text-lg shadow-lg transition-all duration-300 group">
                    Start Your Free Trial
                    <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                </a>
                <p class="text-sm text-gray-500 mt-6">No credit card required • Cancel anytime</p>
            </div>
        </section>
    </div>
</div>

<!-- Added the Inter Font Link -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>
